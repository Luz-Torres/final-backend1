<div class="container mx-auto p-4">
    <h2 class="text-3xl font-bold mb-4">Products </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        {{#each products}}
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <img src="{{thumbnails.[0]}}" alt="{{this.title}}" class="w-full h-48 object-cover">
            <div class="p-4">
                <h3 class="text-lg font-semibold">{{this.title}}</h3>
                <p class="text-xl font-bold mt-2">Precio: ${{this.price}}</p>
                <a href="/products/{{id}}" class="inline-block mt-4 text-green-500 hover:text-green-700">
                    More Info +
                </a>
            </div>
        </div>
        {{/each}}
    </div>