<div class="product bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-2 text-gray-800">{{product.name}}</h2>
    <p class="text-gray-600 mb-1"><strong class="font-semibold">Description:</strong> {{product.description}}</p>
    <p class="text-gray-600 mb-1"><strong class="font-semibold">Code:</strong> {{product.code}}</p>
    <p class="text-gray-600 mb-1"><strong class="font-semibold">Price:</strong> ${{product.price}}</p>
    <p class="text-gray-600 mb-1"><strong class="font-semibold">Status:</strong> 
        <span class="{{#if status}}text-green-500{{else}}text-red-500{{/if}}">
            {{#if status}}Available{{else}}Not Available{{/if}}
        </span>
    </p>
    <p class="text-gray-600 mb-1"><strong class="font-semibold">Stock:</strong> {{stock}} units</p>
    <p class="text-gray-600 mb-4"><strong class="font-semibold">Category:</strong> {{product.category}}</p>

    {{#if thumbnails.length}}
        <div class="thumbnails mb-4">
            <h3 class="text-lg font-semibold text-gray-700 mb-2">Images:</h3>
            <ul class="flex space-x-4">
                {{#each thumbnails}}
                    <li class="w-24 h-24">
                        <img class="w-full h-full object-cover rounded-md border" src="{{this}}" alt="Thumbnail">
                    </li>
                {{/each}}
            </ul>
        </div>
    {{else}}
        <p class="text-gray-500">No images available</p>
    {{/if}}
</div>
